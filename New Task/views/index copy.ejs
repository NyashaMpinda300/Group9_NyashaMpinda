<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>School System</title>
</head>

<body style="font-family: inter, sans-serif; display: flex;">

    <aside>
        <div class="header-logo">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-building-bank" width="50"
                height="50" viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round"
                style="stroke-width: 0.08em;">
                <path stroke="#9334ff" d="M3 21l18 0"></path>
                <path stroke="blue" d="M3 10l18 0"></path>
                <path stroke="rgb(255, 0, 55)" d="M5 6l7 -3l7 3"></path>
                <path stroke="#9334ff" d="M4 10l0 11"></path>
                <path stroke="#9334ff" d="M20 10l0 11"></path>
                <path stroke="blue" d="M8 14l0 3"></path>
                <path stroke="blue" d="M12 14l0 3"></path>
                <path stroke="blue" d="M16 14l0 3"></path>
            </svg>

            <h2>School <br>Management <br>System</h2>
        </div>
        <div class="sidebar-tabs">
            <button id="dashboard-button">
                <span class="material-symbols-outlined">
                    grid_view
                </span>
                Dashboard
            </button>
            <button id="register-student-button">
                <span class="material-symbols-outlined">
                    person_raised_hand
                </span>
                Students
            </button>
            <button id="teachers-button">
                <span class="material-symbols-outlined">
                    clinical_notes
                </span>
                Teachers
            </button>
            <button id="courses-button">
                <span class="material-symbols-outlined">
                    local_library
                </span>
                Courses
            </button>
            <button id="enter-results-button">
                <span class="material-symbols-outlined">
                    grading
                </span>
                Grades
            </button>
            <div class="tabs-bottom">
                <button>
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    Settings
                </button>
                <button>
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                    Logout
                </button>
            </div>
        </div>
    </aside>
    <main>
        <div id="registerStudent" class="content-section">
            <%- include('RegisterStudent') %>
        </div>

        <div id="enterResults" class="content-section">
            <%- include('EnterResults') %>
        </div>

    </main>

    <script>
        // Get references to the buttons
        const dashboardButton = document.querySelector('#dashboard-button');
        const registerStudentButton = document.querySelector('#register-student-button');
        const teachersButton = document.querySelector('#teachers-button');
        const coursesButton = document.querySelector('#courses-button');
        const enterResultsButton = document.querySelector('#enter-results-button');

        // Get references to the content sections
        const dashboardSection = document.querySelector('#dashboard');
        const registerStudentSection = document.querySelector('#registerStudent');
        const teachersSection = document.querySelector('#teachers');
        const coursesSection = document.querySelector('#courses');
        const enterResultsSection = document.querySelector('#enterResults');

        registerStudentButton.addEventListener('click', () => {
            registerStudentSection.style.display = 'block';
            registerStudentButton.style.backgroundColor = 'white'; // Set background-color
            registerStudentButton.style.color = '#310563'; // Set text color
            registerStudentButton.style.borderRadius = '0.3em'; // Set border radius
            enterResultsSection.style.display = 'none';
            enterResultsButton.style.backgroundColor = 'transparent'; // Set background-color
            enterResultsButton.style.color = 'white'; // Set text color
            enterResultsButton.style.borderRadius = '0'; // Set border radius
        });

        enterResultsButton.addEventListener('click', () => {
            enterResultsSection.style.display = 'block';
            enterResultsButton.style.backgroundColor = 'white'; // Set background-color
            enterResultsButton.style.color = '#310563'; // Set text color
            enterResultsButton.style.borderRadius = '0.3em'; // Set border radius
            registerStudentSection.style.display = 'none';
            registerStudentButton.style.backgroundColor = 'transparent'; // Set background-color
            registerStudentButton.style.color = 'white'; // Set text color
            registerStudentButton.style.borderRadius = '0'; // Set border radius
        });
    </script>


</body>

</html>